{
  "compilerOptions": {
    "target": "es2016",        
    "module": "commonjs",                                
    "rootDir": "./src",  
    "moduleResolution": "node",          
    "declaration": true,                                  
    "sourceMap": true,                                    
    "outDir": "./esm",                                   
    "declarationDir": "./",           
    "isolatedModules": true,                             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
